{% extends "admin.html.twig" %}

{% block title %}Modifier un article{% endblock %}
{% block head %}
    {{ parent() }}
{% endblock %}
{% block admin_content %}
<main class="mb-5 pb-5">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <form method="post" action="/edit-user/{{userAccount.id}}" class="shadow card p-5 my-5">
                    {{ form_token("/edit-user/#{userAccount.id}")}}
                    <h2 class=" card-title text-secondary">Modifier le compte utilisateur</h2>
                    <div class="card-body">
                        <div class="form-group">
                            <div class="col mt-4">
                                <label for="username">Pseudo</label>
                                <input type="text" class="form-control mt-2" placeholder="Pseudo de l'utilisateur" name="username" value="{{userAccount.username}}">
                            </div>   
                            <div class="col mt-4">
                                <label for="firstname">Prénom</label>
                                <input type="text" class="form-control mt-2" placeholder="Prénom de l'utilisateur" name="first_name" value="{{userAccount.first_name}}">
                            </div>  
                            <div class="col mt-4">
                                <label for="lastname">Nom</label>
                                <input type="text" class="form-control mt-2" placeholder="Nom de l'utilisateur" name="last_ name" value="{{userAccount.last_name}}">
                            </div>
                            <div class="col mt-4">
                                <label for="email">Email de l'utilisateur</label>
                                <input type="text" class="form-control mt-2" placeholder="Email utilisateur" name="email" value="{{userAccount.email}}" disabled>
                            </div>
                        </div>
                            <fieldset>
                            {# TODO: make this toggle switch functional #}
                                <legend class="mt-4">Privilèges administrateur</legend>
                                {% if userAccount.role == 0 %}
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault" name="role">
                                </div>
                                {% else %}
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" id="flexSwitchCheckChecked" checked="" name="role">
                                </div>
                                {% endif %}
                            </fieldset>
                    </div>
                    <button type="submit" class="btn btn-primary mt-4">Sauvegarder la modification</button>
                </form>
            </div>
        </div>
    </div>
</main>
{% endblock %}